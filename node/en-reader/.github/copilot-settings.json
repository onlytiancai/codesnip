{
  "version": 1,
  "preferences": {
    "preferredFramework": "vue3",
    "preferCompositionAPI": true,
    "suggestLanguage": "zh"
  },
  "rules": [
    {
      "id": "tokenization-preserve-punct",
      "description": "分词时保留撇号、连字符与标点为独立 token",
      "action": "suggest",
      "example": "const re = /[A-Za-z0-9\\u2019'-]+|[^\\s]/gu;"
    },
    {
      "id": "ipa-cache",
      "description": "建议使用 localStorage 做 IPA 查询缓存，并提供离线小表作为回退",
      "action": "suggest"
    },
    {
      "id": "skip-punctuation-speech",
      "description": "在朗读模式下跳过仅包含标点的 token",
      "action": "suggest"
    }
  ],
  "prompts": [
    {
      "scope": ["index.html","**/*.js","**/*.vue"],
      "when": "editing",
      "prompt": "项目偏好：使用 Vue 3 Composition API；分词请保留撇号与连字符，并把标点作为独立 token（示例正则见 repo 文档）。"
    }
  ]
}
